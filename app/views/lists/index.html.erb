<h1>Lists</h1>
<%= link_to 'New List', new_list_path %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @lists.each do |list| %>
      <tr id="<%= dom_id(list) %>">
        <td><%= link_to list.title, list_items_path(list) %></td>
        <td><%= list.description %></td>
        <td><%= link_to 'Edit', edit_list_path(list) %>
        <%= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>